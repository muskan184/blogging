<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partiais/head') %>
    <title>HomePage</title>
  </head>
  <body>
    <%- include('../partiais/nav') %>
    <div class="container mt-4">
      <h1><%= blog.title %></h1>
      <img src="<%= blog.coverImageURl %>" alt="" />
      <pre><%= blog.body %></pre>
    </div>

    <div class="container mt-4">
      <img src="<%= blog.createdBy.profilePhoto %>" width="100px alt=" />
      <%=blog.createdBy.fullname%>
    </div>

    <div class="container mt-3">
      <h1>comments</h1>
      <% if(locals.user){%>
      <form
        action="/blog/comment/<%= blog._id %>"
        method="post"
        autocomplete="off"
      >
        <div class="mb-3">
          <input
            type="text"
            name="content"
            class="form-control"
            placeholder="enter your comments"
          />
          <button type="submit" class="btn btn-sm btn-primary">Add</button>
        </div>
      </form>
    </div>

    <div class="mt-3">
      <% comments.forEach(comment =>{%>
      <div>
        <img src="<%= comment.createdBy.profilePhoto %>" />
        <%=comment.createdBy.fullname%>:
        <pre><%= comment.content %></pre>
      </div>
      <%})%>
    </div>

    <%}%> <%- include('../partiais/script') %>
  </body>
</html>
