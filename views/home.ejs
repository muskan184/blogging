<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partiais/head') %>
    <title>HomePage</title>
  </head>
  <body>
    <%- include('../partiais/nav') %>
    <div class="container mt-4">
      <div class="row row-cols-3">
        <% blogs.forEach(blog=>{%>
        <div class="col">
          <div class="card col" style="width: 18rem">
            <img
              src="<%= blog.coverImageURl %> "
              class="card-img-top"
              alt="..."
            />
            <div class="card-body">
              <h5 class="card-title"><%= blog.title %></h5>
              <a href="<%= blog._id%>" class="btn btn-primary">view</a>
            </div>
          </div>
        </div>
        <%}) %>
      </div>
    </div>

    <%- include('../partiais/script') %>
  </body>
</html>
